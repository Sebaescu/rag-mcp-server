# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rag_db
DB_USER=rag_user
DB_PASSWORD=your_secure_password_here

# Redis Configuration (DB 1 for RAG)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# Embedding Provider Configuration
# Options: 'local' (Xenova transformers) or 'openai' (OpenAI API)
EMBEDDING_PROVIDER=local

# OpenAI Configuration (only needed if EMBEDDING_PROVIDER=openai)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Server Configuration
PORT=3000
NODE_ENV=production

# Logging
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL=3600

# Firecrawl Configuration (optional)
FIRECRAWL_API_KEY=
